<Window x:Class="WPFTicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfTicTacToe="clr-namespace:WPFTicTacToe"
        xmlns:viewModelLocator="http:\\www.codeplex.com\MEFedMVVM"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        viewModelLocator:ViewModelLocator.ViewModel="Main"
        Title="MainWindow" Height="385" Width="832" d:DataContext="{d:DesignInstance wpfTicTacToe:MainWindowViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <wpfTicTacToe:TicTacToeControl Grid.Column="1" Squares="{Binding Squares}" PlayerPieceMapping="{Binding PlayerPieceMapping}" />
        <Button Command="{Binding StartMatchCommand}" Content="Button" HorizontalAlignment="Left" Height="39" Margin="21,10,0,0" VerticalAlignment="Top" Width="113"/>
    </Grid>
</Window>
